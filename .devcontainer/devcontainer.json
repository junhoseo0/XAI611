{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"runArgs": ["--gpus", "all", "--shm-size", "1gb"],
	"remoteUser": "root",
	"customizations": {
		"extensions": [
			"ms-python.python",
			"ms-python.vscode-pylance",
			"charliermarsh.ruff",
			"ms-toolsai.jupyter"
		]
	}
}
